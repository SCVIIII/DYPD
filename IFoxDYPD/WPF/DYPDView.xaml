<Window
    x:Class="IFoxDYPD.WPF.DYPDView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:IFoxDYPD.WPF"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="低压配电程序V2.0"
    Width="1200"
    Height="650"
    WindowStartupLocation="CenterScreen"
    WindowStyle="ThreeDBorderWindow"
    mc:Ignorable="d">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme
                    BaseTheme="Light"
                    PrimaryColor="DeepPurple"
                    SecondaryColor="Lime" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!--  定义默认蓝色背景的按钮样式  -->
            <Style x:Key="TileButtonStyle" TargetType="Button">

                <Setter Property="BorderThickness" Value="1" />
                <Setter Property="Width" Value="100" />
                <Setter Property="Height" Value="200" />
                <Setter Property="Margin" Value="5,0,0,5" />
                <Setter Property="Padding" Value="5" />
            </Style>
        </ResourceDictionary>
    </Window.Resources>



    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="6*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <ProgressBar
            Grid.Row="0"
            Height="20"
            Margin="5,0,5,20"
            VerticalAlignment="Bottom"
            IsIndeterminate="True"
            Orientation="Horizontal"
            Visibility="{Binding IsWaiting}" />


        <!--  磁贴  -->
        <StackPanel
            Grid.Row="0"
            Margin="0"
            HorizontalAlignment="Left">

            <!--  TA的ScrollViewer  -->
            <ScrollViewer
                Grid.Row="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <!--  尝试在磁贴这行的上方，添加一个按钮，用于选择是否翻转布置  -->
                        <ToggleButton
                            Margin="5,5,5,5"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Content="Toggle 1"
                            IsChecked="{Binding IsToggleButton1Checked}"
                            Style="{StaticResource MaterialDesignSwitchSecondaryToggleButton}" />
                        <TextBlock
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="18"
                            Text="是否翻转为从右至左布置" />
                    </StackPanel>

                    <!--  TA低压柜的磁贴  -->
                    <ItemsControl
                        x:Name="MemoItemsControl_TA"
                        Grid.ColumnSpan="2"
                        HorizontalAlignment="Left"
                        ItemsSource="{Binding MemoDtos_TA}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <md:TransitioningContent OpeningEffect="{md:TransitionEffect Kind=ExpandIn}">
                                    <Grid
                                        Width="100"
                                        Height="190"
                                        Margin="5,10">

                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>


                                        <Border Grid.RowSpan="4" CornerRadius="3">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Property2}" Value="未设置">
                                                            <Setter Property="Background" Value="Red" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Property2}" Value="进线柜">
                                                            <Setter Property="Background" Value="#b76cf8" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Property2}" Value="补偿柜">
                                                            <Setter Property="Background" Value="#f8716c" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Property2}" Value="联络柜">
                                                            <Setter Property="Background" Value="#adf86c" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Property2}" Value="馈电柜">
                                                            <Setter Property="Background" Value="#6cf3f8" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                        </Border>
                                        <TextBlock
                                            Grid.Row="0"
                                            Padding="10,5"
                                            FontSize="25"
                                            FontWeight="Bold"
                                            Text="{Binding ID}" />
                                        <TextBlock
                                            Grid.Row="1"
                                            Padding="10,5"
                                            FontWeight="Bold"
                                            Text="{Binding Property1}"
                                            Visibility="Hidden"/>
                                        <TextBlock
                                            Grid.Row="2"
                                            Padding="10,5"
                                            HorizontalAlignment="Left"
                                            FontSize="20"
                                            Text="{Binding Property2}" />
                                        <ComboBox
                                            x:Name="ComboBoxPurpose2"
                                            Grid.Row="3"
                                            Width="90"
                                            Margin="2"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Top"
                                            materialDesign:HintAssist.HelperText="选择类型"
                                            materialDesign:HintAssist.Hint="选择"
                                            ItemsSource="{Binding DataContext.ComboBoxItems, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"
                                            SelectedItem="{Binding SelectedComboBoxItem, Mode=TwoWay}" />
                                    </Grid>
                                </md:TransitioningContent>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

            </ScrollViewer>
            <!--  TB对应的代码，修改时优先拷贝TA的代码  -->
            <!--  TB的ScrollViewer  -->
            <ScrollViewer>

                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <!--  尝试在磁贴这行的上方，添加一个按钮，用于选择是否翻转布置  -->
                        <ToggleButton
                            Margin="5,5,5,5"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Content="Toggle 2"
                            IsChecked="{Binding IsToggleButton2Checked}"
                            Style="{StaticResource MaterialDesignSwitchSecondaryToggleButton}" />
                        <TextBlock
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            FontSize="18"
                            Text="是否翻转为从右至左布置" />
                    </StackPanel>
                    <ItemsControl
                        x:Name="MemoItemsControl_TB"
                        HorizontalAlignment="Left"
                        ItemsSource="{Binding MemoDtos_TB}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <md:TransitioningContent OpeningEffect="{md:TransitionEffect Kind=ExpandIn}">
                                    <Grid
                                        Width="100"
                                        Height="190"
                                        Margin="5,10">

                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>


                                        <Border Grid.RowSpan="4" CornerRadius="3">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Property2}" Value="未设置">
                                                            <Setter Property="Background" Value="Red" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Property2}" Value="进线柜">
                                                            <Setter Property="Background" Value="#b76cf8" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Property2}" Value="补偿柜">
                                                            <Setter Property="Background" Value="#f8716c" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Property2}" Value="联络柜">
                                                            <Setter Property="Background" Value="#adf86c" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Property2}" Value="馈电柜">
                                                            <Setter Property="Background" Value="#6cf3f8" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                        </Border>
                                        <TextBlock
                                            Grid.Row="0"
                                            Padding="10,5"
                                            FontSize="25"
                                            FontWeight="Bold"
                                            Text="{Binding ID}" />
                                        <TextBlock
                                            Grid.Row="1"
                                            Padding="10,5"
                                            FontWeight="Bold"
                                            Text="{Binding Property1}" />
                                        <TextBlock
                                            Grid.Row="2"
                                            Padding="10,5"
                                            HorizontalAlignment="Left"
                                            FontSize="20"
                                            Text="{Binding Property2}" />

                                        <ComboBox
                                            x:Name="ComboBoxPurpose2"
                                            Grid.Row="3"
                                            Width="90"
                                            Margin="2"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Top"
                                            materialDesign:HintAssist.HelperText="选择类型"
                                            materialDesign:HintAssist.Hint="选择"
                                            ItemsSource="{Binding DataContext.ComboBoxItems, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"
                                            SelectedItem="{Binding SelectedComboBoxItem, Mode=TwoWay}" />
                                    </Grid>
                                </md:TransitioningContent>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

            </ScrollViewer>






        </StackPanel>

        <!--  辅助信息及按钮  -->
        <DockPanel Grid.Row="1" Grid.Column="0">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>


            </Grid>
            <TextBox
                Margin="10,10"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                FontSize="15"
                Style="{StaticResource MaterialDesignFilledTextBox}"
                Text="{Binding IsImportDwg}" />
            <!--  添加右下角的按钮  -->
            <StackPanel
                Grid.Row="1"
                Grid.Column="0"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Orientation="Vertical">

                <StackPanel Margin="5" Orientation="Horizontal">
                    <Button
                        Margin="10"
                        Content="等待窗体预留"
                        Visibility="Hidden" />
                    <Button
                        Margin="10"
                        Command="{Binding CloseCommand}"
                        Content="退出程序"
                        Visibility="Visible" />

                    <Button
                        Margin="5"
                        Command="{Binding InsertBlockCommand}"
                        Content="生成系统图" />
                </StackPanel>
            </StackPanel>
        </DockPanel>


    </Grid>
</Window>
